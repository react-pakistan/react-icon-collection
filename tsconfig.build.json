{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "jsx": "react",
    "rootDir": "./src",
    "declaration": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "./images.d.ts",
    "./node_modules/@types",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "./.storybook",
    "./jest",
    "./src/__stories__",
    "./src/__tests__",
  ]
}
